{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "wmake",
            "type": "shell",
            "command": "wclean && wmake",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": "$gcc"
        }
    ]
}